
<%= javascript_pack_tag 'users/users', 'data-turbolinks-track': 'reload' %>

<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<%= form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <h4>Experience Detail</h4>
              <% active = "block" %>
    <% (0..10).each do |i| %>
      <% if @user[:experience_detail][i] %>
              <div class="json-filed" style = "display : <%= active %>">
        <% @user[:experience_detail][i].each do |key, value| %>
          <div>
            <%= key.to_s.humanize %>
            <input name = "user[experience_detail][<%= i %>][<%= key %>]" value="<%= value %>"> 
          </div>
        <% end %>
      <% else %>
              <div class="json-filed" style = "display : <%= active %>">
        <div>
          <span> Comapny Name </span>
          <input name = "user[experience_detail][<%= i %>][company Name]">
        </div>
        <div>
          <span> Location </span>
          <input name = "user[experience_detail][<%= i %>][Location]">
        </div>
        <div>
          <span> Tenure </span>
          <input name = "user[experience_detail][<%= i %>][Tenure]">
        </div>
        <div>
          <span> Designation </span>
          <input name = "user[experience_detail][<%= i %>][Designation]">
        </div>
        <div>
          <span> Start Date </span>
          <input name = "user[experience_detail][<%= i %>][Start Date]">
        </div>
        <div>
          <span> End Date </span>
          <input name = "user[experience_detail][<%= i %>][End Date]">
        </div>
        <div class = "add_more btn btn-outline-success" style = "display : <%= active %>">
           Add More
        </div>
              <% active = "none" %>
      <% end %>
            </div>
            <br>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
